<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.airpremia.eosh.jobplan.repository.JobEmployeeProtectGearCheckRepository">
    <select id="selectJobEmployeeProtectGearCheckList" resultType="JobEmployeeProtectGearCheckDto">
        SELECT job_seq
            ,user_protect_gear_status_seq
            ,protect_gear_check_seq
            ,job_employee_seq
            ,check_bool
        FROM job_employee_protect_gear_check
        <where>
            job_seq = #{jobSeq}
        </where>
    </select>
    <insert id="insertJobEmployeeProtectGearCheckList">
        INSERT INTO job_employee_protect_gear_check (
            job_seq
            ,user_protect_gear_status_seq
            ,job_employee_seq
            ,check_bool
            ,insert_ip
            )
        VALUES
        <foreach collection="employeeProtectGearList" item="item" separator=",">
           (
               #{item.jobSeq}
               ,#{item.userProtectGearStatusSeq}
               ,#{item.jobEmployeeSeq}
               ,#{item.checkBool}
               ,#{item.insertIp}
           )
       </foreach>
    </insert>

    <update id="updateJobEmployeeProtectGearCheck">
        UPDATE job_employee_protect_gear_check
        SET
        	 check_bool = #{checkBool}
             ,update_user_id = #{updateUserId}
             ,update_ip = #{updateIp}
        <where>
            protect_gear_check_seq = #{protectGearCheckSeq}
        </where>
    </update>

    <delete id="deleteJobEmployeeProtectGearCheckList">
        DELETE
        FROM job_employee_protect_gear_check
        <where>
            protect_gear_check_seq IN
                <foreach item="protectGearCheckSeq" collection="registeredEmployeeProtectGearSeqList" open="(" separator="," close=")">
                    #{protectGearCheckSeq}
                </foreach>
        </where>
    </delete>
</mapper>