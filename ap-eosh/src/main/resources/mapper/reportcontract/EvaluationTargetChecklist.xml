<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.airpremia.eosh.personaldetail.reportcontract.repository.EvaluationTargetChecklistRepository">

    <select id="selectEvaluationTargetChecklist" resultType="EvaluationTargetChecklistDto">
        SELECT evaluation_target_checklist_seq
             ,contract_seq
             ,checklist_code
             ,checklist_result
             ,remark
        FROM evaluation_target_checklist
        <where>
            AND contract_seq = #{contractSeq}
        </where>
    </select>

    <insert id="insertEvaluationTargetChecklist">
        INSERT INTO evaluation_target_checklist
        (
         contract_seq
        ,checklist_code
        ,checklist_result
        ,remark
        ,insert_ip
        ,insert_user_id)
        VALUES
            (#{contractSeq}
            ,#{checklistCode}
            ,#{checklistResult}
            ,#{remark}
            ,#{insertIp}
            ,#{insertUserId})
    </insert>

    <update id="updateEvaluationTargetChecklist">
        UPDATE evaluation_target_checklist SET
        checklist_result = #{checklistResult}
        ,remark = #{remark}
        ,update_ip = #{updateIp}
        ,update_user_id = #{updateUserId}
        <where>
            AND evaluation_target_checklist_seq = #{evaluationTargetChecklistSeq}
        </where>
    </update>

    <delete id="deleteEvaluationTargetChecklist">
        DELETE
        FROM evaluation_target_checklist
        <where>
            AND contract_seq = #{contractSeq}
        </where>
    </delete>
</mapper>
