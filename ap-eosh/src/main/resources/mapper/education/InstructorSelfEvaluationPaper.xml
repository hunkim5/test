<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.airpremia.eosh.education.repository.InstructorSelfEvaluationPaperRepository">

    <select id="selectInstructorSelfEvaluationPaper" resultType="InstructorSelfEvaluationPaperDto">
           SELECT instructor_self_evaluation_seq
           ,education_seq
           ,instructor_seq
           ,division_code
           ,checklist_code
           ,evaluation_enum
        FROM instructor_self_evaluation_paper
        WHERE
            instructor_self_evaluation_seq = #{instructorSelfEvaluationSeq}
    </select>

    <select id="selectInstructorSelfEvaluationPaperList" resultType="InstructorSelfEvaluationPaperDto">
        SELECT instructor_self_evaluation_seq
            ,education_seq
            ,education_instructor_seq
            ,division_code
            ,checklist_code
            ,evaluation_enum
        FROM instructor_self_evaluation_paper
        <where>
            AND education_instructor_seq = #{educationInstructorSeq}
        </where>
    </select>

    <insert id="insertInstructorSelfEvaluationPaper" useGeneratedKeys="true" keyProperty="instructorSelfEvaluationSeq">
        INSERT INTO instructor_self_evaluation_paper (
            education_seq
            ,education_instructor_seq
            ,division_code
            ,checklist_code
            ,evaluation_enum
            ,insert_ip
            ,insert_user_id
            ,insert_dtm
        ) VALUES
        <foreach collection="insertDtoList" item="item" separator=", ">
            (
                #{item.educationSeq}
                ,#{item.educationInstructorSeq}
                ,#{item.divisionCode}
                ,#{item.checklistCode}
                ,#{item.evaluationEnum}
                ,#{item.insertIp}
                ,#{item.insertUserId}
                ,#{item.insertDtm}
            )
        </foreach>
    </insert>

    <update id="updateInstructorSelfEvaluationPaper">
        UPDATE instructor_self_evaluation_paper SET
         division_code = #{divisionCode}
        ,checklist_code = #{checklistCode}
        ,evaluation_enum = #{evaluationEnum}
        ,update_ip = #{updateIp}
        ,update_user_id = #{updateUserId}
        <where>
            AND instructor_self_evaluation_seq = #{instructorSelfEvaluationSeq}
        </where>
    </update>

    <delete id="deleteInstructorSelfEvaluationPaper">
        DELETE
        FROM instructor_self_evaluation_paper
        <where>
            AND education_instructor_seq IN
            <foreach item="educationInstructorSeq" collection="educationInstructorSeqs" open="(" separator="," close=")">
                #{educationInstructorSeq}
            </foreach>
        </where>
    </delete>

    <delete id="deleteAllInstructorSelfEvaluationPaper">
        DELETE
        FROM instructor_self_evaluation_paper
        <where>
            AND education_seq = #{educationSeq}
        </where>
    </delete>
</mapper>