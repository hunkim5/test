<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.airpremia.eosh.personaldetail.basicinfo.repository.BasicInfoRepository">

    <select id="selectBasicInfo" parameterType="BasicInfoDto">
           SELECT
            user_seq
            ,user_id
            ,user_job_classification_classification_enum
            ,user_grade_enum
        FROM user
        WHERE
            user_seq = #{userSeq}
    </select>

    <select id="selectBasicInfoSearch" parameterType="BasicInfoDto">
           SELECT
            user_seq
            ,user_id
            ,user_job_classification_classification_enum
            ,user_grade_enum
        FROM user
        <where>
            <if test="@com.airpremia.esmsfos.core.MybatisUtils@isNotEmpty(userJobClassificationClassificationEnum)">
                AND user_job_classification_classification_enum = #{userJobClassificationClassificationEnum}
            </if>
            <if test="@com.airpremia.esmsfos.core.MybatisUtils@isNotEmpty(userGradeEnum)">
                AND user_grade_enum = #{userGradeEnum}
            </if>
        </where>
    </select>

    <update id="updateBasicInfo">
        UPDATE user
        SET
            user_job_classification_classification_enum = #{userJobClassificationClassificationEnum}
        WHERE
            user_seq = #{userSeq}
    </update>

</mapper>
